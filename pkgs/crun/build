
version=1.5
url=https://github.com/containers/crun/releases/download/${version}/crun-${version}.tar.xz
checksum=8e7e1636adb3cc12d45cdf4ddfd0503604950d0d2868a0bfa9666b90d0a8d9d7
type=configure
configure_flags="--disable-systemd --disable-embedded-yajl"
depends="libcap libyajl argp-standalone libseccomp"
initrd_binaries="/bin/crun"

pre_build() {
  export CFLAGS="$CFLAGS $(pkg-config --cflags yajl)"
  export LDFLAGS="$LDFLAGS $(pkg-config --libs yajl)"
}
