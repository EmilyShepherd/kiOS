
type=make

pre_build() {
  export BUILD_CC=$(which gcc)
  export BUILD_LD=$(which ld)

  mkdir -p ${BUILD_DIR}/usr
  ln -sf lib ${BUILD_DIR}/lib64
  ln -sf ../include ${BUILD_DIR}/usr/include
}

post_build() {
  # Remove the shared libraries so that builds use the static version.
  # (This is sensible as only one binary uses libcap, so it makes sense
  # to let it embed it).
  rm ${BUILD_DIR}/lib/libcap.so*
}
