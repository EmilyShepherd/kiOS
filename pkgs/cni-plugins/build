
pkg=plugins
project=containernetworking
url=github
version=v1.0.1
checksum=2ba3cd9f341a7190885b60d363f6f23c6d20d975a7a0ab579dd516f8c6117619

build() {
  mkdir -p ${BUILD_DIR}/opt/cni/bin ./bin

  for plugin in main/bridge main/loopback ipam/host-local
  do
    name=$(basename $plugin)
    go build -o bin/$name ./plugins/$plugin/
    $STRIP bin/$name
  done

  cp bin/* ${BUILD_DIR}/opt/cni/bin/
  cp -r ../files/* ${BUILD_DIR}/
}
