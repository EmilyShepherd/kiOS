
pkg=plugins
project=containernetworking
url=github
version=v1.0.1
checksum=2ba3cd9f341a7190885b60d363f6f23c6d20d975a7a0ab579dd516f8c6117619

build() {
  mkdir -p ${BUILD_DIR}/opt/cni/bin ./bin ${INITRD}/opt/cni/bin

  ./build_linux.sh

  cp bin/* ${BUILD_DIR}/opt/cni/bin/
  cp bin/{portmap,loopback} ${INITRD}/opt/cni/bin/
}
